{
  "name": "ts-lib-template",
  "version": "0.0.1",
  "description": "A typescript library template",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "release": "npm run build && np --no-yarn --no-tests --no-cleanup --branch main"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "typescript",
    "no bundle",
    "template",
    "library"
  ],
  "lint-staged": {
    "src/**/*.{j,t}s?(x)": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "author": "Fog3211",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.2",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "eslint": "^8.34.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "np": "^7.6.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=12"
  },
  "packageManager": "pnpm@7.15.0",
  "bugs": {
    "url": "https://github.com/fog3211/ts-lib-template/issues"
  },
  "homepage": "https://github.com/fog3211/ts-lib-template#readme",
  "publishConfig": {
    "access": "public"
  }
}
